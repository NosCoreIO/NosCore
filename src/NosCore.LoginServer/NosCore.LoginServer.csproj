    <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="7.0.1" />
    <PackageReference Include="FastExpressionCompiler" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="3.1.8" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.8" />
    <PackageReference Include="Polly" Version="7.2.1" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.0.2-dev-10281" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NosCore.PacketHandlers\NosCore.PacketHandlers.csproj" />
  </ItemGroup>


